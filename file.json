{
    "name": "Gallery",
    "description": "Gaia Gallery",
    "type": "certified",
    "launch_path": "/index.html",
    "developer": {
        "name": "The Gaia Team",
        "url": "https://github.com/mozilla-b2g/gaia"
    },
    "fullscreen": true,
    "permissions": {
        "themeable": {},
        "storage": {},
        "device-storage:pictures": {
            "access": "readwrite"
        },
        "device-storage:videos": {
            "access": "readwrite"
        },
        "audio-channel-content": {},
        "nfc-share": {},
        "feature-detection": {}
    },
    "activities": {
        "browse": {
            "filters": {
                "type": "photos"
            },
            "disposition": "window"
        },
        "pick": {
            "filters": {
                "type": [
                    "image/*",
                    "image/jpeg",
                    "image/png"
                ]
            },
            "disposition": "inline",
            "returnValue": true,
            "href": "/index.html#pick"
        },
        "open": {
            "filters": {
                "type": [
                    "image/jpeg",
                    "image/png",
                    "image/gif",
                    "image/bmp"
                ]
            },
            "disposition": "inline",
            "returnValue": true,
            "href": "/open.html"
        }
    },
    "locales": {
        "zh-TW": {
            "name": "圖片庫",
            "description": "Gaia 圖片庫"
        }
    },
    "default_locale": "en-US",
    "icons": {
        "84": "/style/icons/gallery_84.png",
        "126": "/style/icons/gallery_126.png",
        "142": "/style/icons/gallery_142.png",
        "189": "/style/icons/gallery_189.png",
        "284": "/style/icons/gallery_284.png"
    },
    "version": "2.2"
}




{
    "name": "Video",
    "description": "Gaia Video",
    "type": "certified",
    "launch_path": "/index.html",
    "developer": {
        "name": "The Gaia Team",
        "url": "https://github.com/mozilla-b2g/gaia"
    },
    "fullscreen": true,
    "permissions": {
        "themeable": {},
        "storage": {},
        "device-storage:pictures": {
            "access": "readwrite"
        },
        "device-storage:videos": {
            "access": "readwrite"
        },
        "audio-channel-content": {},
        "nfc-share": {}
    },
    "icons": {
        "84": "/style/icons/video_84.png",
        "126": "/style/icons/video_126.png",
        "142": "/style/icons/video_142.png",
        "189": "/style/icons/video_189.png",
        "284": "/style/icons/video_284.png"
    },
    "activities": {
        "pick": {
            "filters": {
                "type": [
                    "video/*",
                    "video/webm",
                    "video/mp4",
                    "video/3gpp",
                    "video/3gpp2",
                    "video/ogg"
                ]
            },
            "disposition": "inline",
            "returnValue": true,
            "href": "/index.html#pick"
        },
        "view": {
            "filters": {
                "type": [
                    "video/webm",
                    "video/mp4",
                    "video/3gpp",
                    "video/3gpp2",
                    "video/ogg"
                ]
            },
            "href": "view.html",
            "disposition": "inline",
            "returnValue": true
        },
        "open": {
            "filters": {
                "type": [
                    "video/webm",
                    "video/mp4",
                    "video/3gpp",
                    "video/3gpp2",
                    "video/ogg"
                ]
            },
            "href": "view.html",
            "disposition": "inline",
            "returnValue": true
        }
    }
}



"orientation": "default",
"activities": {
    "open": {
        "filters": {
            "type": "application/pdf"
        },
        "disposition": "window",
        "href": "/content/web/viewer.html",
        "returnValue": true
    },
    "view": {
        "filters": {
            "type": "application/pdf"
        },
        "disposition": "inline",
        "href": "/content/web/viewer.html",
        "returnValue": true
    }
},
"permissions": {
    "systemXHR": {}
},
"version": "2.2"
}